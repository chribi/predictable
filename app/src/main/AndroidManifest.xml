<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.chribi.predictable">

    <application
        android:name=".PredictableApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".startscreen.StartScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".newprediction.NewPredictionActivity"
            android:parentActivityName=".startscreen.StartScreenActivity">
        </activity>
        <activity
            android:name=".predictiondetail.PredictionDetailActivity"
            android:parentActivityName=".startscreen.StartScreenActivity">
        </activity>
        <activity
            android:name=".predictionlist.PredictionListActivity"
            android:parentActivityName=".startscreen.StartScreenActivity"/>
        <activity
            android:name=".statistics.StatisticsActivity"
            android:parentActivityName=".startscreen.StartScreenActivity" />
    </application>

</manifest>