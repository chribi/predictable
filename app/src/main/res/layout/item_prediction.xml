<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="itemViewModel"
            type="de.chribi.predictable.PredictionItemViewModel"
            />
        <import type="de.chribi.predictable.data.PredictionState" />
        <import type="android.view.View" />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:contentPadding="8dp"
        app:cardCornerRadius="4dp"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                
                <TextView
                    android:id="@+id/text_event_last_confidence"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:text="@{itemViewModel.confidence}"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/text_event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{itemViewModel.eventTitle}"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/text_event_last_confidence"
                    android:layout_toEndOf="@id/text_event_last_confidence"
                    />

                <TextView
                    android:id="@+id/text_event_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{itemViewModel.statusDescription}"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/text_event_title"
                    android:layout_toRightOf="@+id/text_event_last_confidence"
                    android:layout_toEndOf="@+id/text_event_last_confidence"
                    android:layout_toLeftOf="@+id/icon_prediction_state"
                    android:layout_toStartOf="@+id/icon_prediction_state"
                    />
                <ImageView
                    android:id="@+id/icon_prediction_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:predictionState="@{itemViewModel.predictionState}"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    />
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>